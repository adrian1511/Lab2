@model NavbarModel
<header class="header header-transparent header-sticky  d-lg-block d-none">
    <div class="header-deafult-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-3 col-lg-2 col-md-4 col-12">
                    <!--Logo Area Start-->
                    <div class="logo-area">
                        <a href="@Url.Action("Index", "Home")"><img src="/Content/images/logo.png" alt=""></a>
                    </div>
                    <!--Logo Area End-->
                </div>
                <div class="col-xl-6 col-lg-6 col-md-4 d-none d-lg-block col-12">
                    <!--Header Menu Area Start-->
                    <div class="header-menu-area text-center">
                        <nav class="main-menu">
                            <ul>
                                <li>
                                    <a href="@Url.Action("Index", "Home")">Главная</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index","Shop")">Магазин</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Contact", "Home")">Контакты</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <!--Header Menu Area End-->
                </div>
                <div class="col-xl-3 col-lg-4 col-md-5 col-12">
                    <!--Header Search And Mini Cart Area Start-->
                    <div class="header-search-cart-area">
                        <ul>
                            <li><a class="header-search-toggle" href="#"><i class="flaticon-magnifying-glass"></i></a></li>
                            <li class="currency-menu">
                                <a href="#"><i class="flaticon-user"></i></a>
                                <!--Crunccy dropdown-->
                                <ul class="currency-dropdown">
                                    <!--Account Currency Start-->
                                    <li>
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <a>@Model.User.Email</a>
                                        }
                                        else
                                        {
                                            <a>Пользователь</a>
                                        }
                                        <ul>
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                if (Model.User.Role == "admin")
                                                {
                                                    <li><a href="@Url.Action("Index", "Admin")">Панель админа</a></li>
                                                }
                                                else
                                                {
                                                    <li><a href="@Url.Action("Cart","Shop")">Корзина</a></li>
                                                }
                                                <li><a href="@Url.Action("Logoff", "Account")">Выйти</a></li>
                                            }
                                            else
                                            {
                                                <li><a href="@Url.Action("Login", "Account")">Войти</a></li>
                                                <li><a href="@Url.Action("Register", "Account")">Создать аккаунт</a></li>
                                            }
                                        </ul>
                                    </li>
                                    <!--Account Currency End-->
                                </ul>
                                <!--Crunccy dropdown-->
                            </li>

                        </ul>
                    </div>
                    <!--Header Search And Mini Cart Area End-->
                </div>
            </div>
        </div>
    </div>
</header>
