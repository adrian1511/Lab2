@model LoginRegisterModel
@{
    ViewBag.Title = "Вход/Регистрация";
    Layout = "~/Views/Shared/Layouts/_Layout.cshtml";
}

<div class="login-register-section section pt-90 pt-lg-70 pt-md-60 pt-sm-55 pt-xs-45  pb-70 pb-lg-50 pb-md-40 pb-sm-30 pb-xs-20">
    <div class="container">
        <div class="row">
            <!--Login Form Start-->
            <div class="col-md-6 col-sm-6">
                <div class="customer-login-register">
                    <div class="form-login-title">
                        <h2>Вход</h2>
                    </div>
                    <div class="login-form">
                        @using (Html.BeginForm("Login", "Account"))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-fild">
                                <p><label>Email <span class="required">*</span></label></p>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { type = "text" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-fild">
                                <p><label>Пароль <span class="required">*</span></label></p>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { type = "password" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="login-submit">
                                <button type="submit" class="btn">Вход</button>
                                <label>
                                    @Html.EditorFor(model => model.RememberMe, new { htmlAttributes = new { type = "checkbox", @class = "checkbox" } })
                                    @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
                                    <span>Запомнить меня</span>
                                </label>
                            </div>
                            <div class="lost-password">
                                <a href="#">Забыли пароль?</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!--Login Form End-->
            <!--Register Form Start-->
            <div class="col-md-6 col-sm-6">
                <div class="customer-login-register register-pt-0">
                    <div class="form-register-title">
                        <h2>Регистрация</h2>
                    </div>
                    <div class="register-form">
                        @using (Html.BeginForm("Register", "Account"))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-fild">
                                <p><label>Email<span class="required">*</span></label></p>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { type = "text" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-fild">
                                <p><label>Пароль <span class="required">*</span></label></p>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { type = "password" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="register-submit">
                                <button type="submit" class="btn">Регистрация</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!--Register Form End-->
        </div>
    </div>
</div>

