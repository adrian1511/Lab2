@model AccountConfig
@{
    ViewBag.Title = "Мой аккаунт";
    Layout = "~/Views/Shared/Layouts/_Layout.cshtml";
}
<div class="my-account-section section pt-90 pt-lg-70 pt-md-60 pt-sm-50 pt-xs-45  pb-100 pb-lg-80 pb-md-70 pb-sm-60 pb-xs-50">
    <div class="container">
        <div class="row">

            <div class="col-12">
                <div class="row">
                    <!-- My Account Tab Menu Start -->
                    <div class="col-lg-3 col-12">
                        <div class="myaccount-tab-menu nav" role="tablist">
                            <a href="#dashboad" class="active" data-toggle="tab">
                                <i class="fa fa-dashboard"></i>
                                Панель
                            </a>

                            <a href="#orders" data-toggle="tab"><i class="fa fa-cart-arrow-down"></i> Заказы</a>

                            <a href="#address-edit" data-toggle="tab"><i class="fa fa-map-marker"></i> Адресс</a>

                            <a href="#account-info" data-toggle="tab"><i class="fa fa-user"></i> Аккаунт</a>

                            <a href="login-register.html"><i class="fa fa-sign-out"></i> Выйти</a>
                        </div>
                    </div>
                    <!-- My Account Tab Menu End -->
                    <!-- My Account Tab Content Start -->
                    <div class="col-lg-9 col-12">
                        <div class="tab-content" id="myaccountContent">
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade show active" id="dashboad" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Панель</h3>

                                    <div class="welcome mb-20">
                                        <p>Здравствуй, <strong>@Model.User.FirstName @Model.User.LastName</strong> (Если это не <strong>@Model.User.LastName! </strong><a href="login-register.html" class="logout">Выйдите</a>)</p>
                                    </div>

                                    <p class="mb-0">С вашей панели вы можете легко проверить свои последние заказы, изменить адресс или пароль.</p>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade" id="orders" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Заказы</h3>

                                    <div class="myaccount-table table-responsive text-center">
                                        <table class="table table-bordered">
                                            <thead class="thead-light">
                                                <tr>
                                                    <th>No</th>
                                                    <th>Название</th>
                                                    <th>Дата</th>
                                                    <th>Статус</th>
                                                    <th>Всего</th>
                                                    <th>Посмотреть</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                <tr>
                                                    <td>1</td>
                                                    <td>Mostarizing Oil</td>
                                                    <td>Aug 22, 2018</td>
                                                    <td>Отправлен</td>
                                                    <td>$45</td>
                                                    <td><a href="cart.html" class="btn">View</a></td>
                                                </tr>
                                                <tr>
                                                    <td>2</td>
                                                    <td>Katopeno Altuni</td>
                                                    <td>July 22, 2018</td>
                                                    <td>Доставлен</td>
                                                    <td>$100</td>
                                                    <td><a href="cart.html" class="btn">View</a></td>
                                                </tr>

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade" id="address-edit" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Адресс</h3>

                                    <address>
                                        <p><strong>@Model.User.FirstName @Model.User.LastName</strong></p>
                                        <p>
                                            1355 Market St, Suite 900 <br>
                                            San Francisco, CA 94103
                                        </p>
                                        <p>Mobile: (123) 456-7890</p>
                                    </address>

                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade" id="account-info" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Детали аккаунта</h3>

                                    <div class="account-details-form">
                                        @using (Html.BeginForm("Edit", "Account"))
                                        {
                                            @Html.AntiForgeryToken()
                                            <div class="row">
                                                <div class="col-lg-6 col-12 mb-30">
                                                    @Html.EditorFor(model => model.User.LastName, new { htmlAttributes = new {placeholder="Фамилия",id="last-name", type = "text" } })
                                                    @Html.ValidationMessageFor(model => model.User.LastName, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="col-lg-6 col-12 mb-30">
                                                    @Html.EditorFor(model => model.User.FirstName, new { htmlAttributes = new { placeholder="Имя", id = "first-name", type = "text" } })
                                                    @Html.ValidationMessageFor(model => model.User.FirstName, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="col-12 mb-30">
                                                    @Html.EditorFor(model => model.User.NickName, new { htmlAttributes = new { placeholder = "Никнейм", id = "display-name", type = "text" } })
                                                    @Html.ValidationMessageFor(model => model.User.NickName, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="col-12 mb-30">
                                                    @Html.EditorFor(model => model.User.Email, new { htmlAttributes = new { placeholder = "Email", id = "email", type = "email" } })
                                                    @Html.ValidationMessageFor(model => model.User.Email, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="col-12 mb-30">
                                                    <h4>Сменить пароль</h4>
                                                </div>

                                                <div class="col-12 mb-30">
                                                    @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { placeholder = "Старый пароль", id = "current-pwd", type = "password" } })
                                                    @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="col-lg-6 col-12 mb-30">
                                                    @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { placeholder = "Новый пароль", id = "new-pwd", type = "password" } })
                                                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="col-lg-6 col-12 mb-30">
                                                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { placeholder = "Подтвердить пароль", id = "confirm-pwd", type = "password" } })
                                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="col-12">
                                                    <button type="submit" class="save-change-btn">Сохранить изменения</button>
                                                </div>

                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                        </div>
                    </div>
                    <!-- My Account Tab Content End -->
                </div>

            </div>

        </div>
    </div>
</div>

